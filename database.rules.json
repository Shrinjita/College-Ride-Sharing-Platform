{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "rides": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$rideId": {
        ".validate": "newData.hasChildren(['pickup', 'drop', 'gender', 'time', 'createdBy'])"
      }
    },
    "messages": {
      "$senderId": {
        "$receiverId": {
          ".read": "auth != null && (auth.uid == $senderId || auth.uid == $receiverId)",
          ".write": "auth != null && (auth.uid == $senderId || auth.uid == $receiverId)"
        }
      }
    }
  }
}
